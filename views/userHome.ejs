<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Home matches</title>
	<%- include("partials/userHead") %>
</head>
<body>
	<%- include("partials/userNav") %>
	<h1>Welcome to sportscore</h1>
	<article class="matchesContainer">
		<% matches.forEach(function(match) { %>
			<a href="/match/<%= match.id %>">
				<section data-matchId="<%= match.id %>">
					<h2><%= match.team1 %> <%= match.team1Score %> - <%= match.team2Score %> <%= match.team2 %></h2>
					<span class="dateTime"><%= match.dateTime %></span>
					<span>Comments: <%= match.comments.length %></span>
				</section>
			</a>
		<% }) %>
	</article>
</body>
</html>